            </Grid>
            <Grid x:Name="grid7" DataContext="{StaticResource оценкиViewSource}" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
